<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/transparent">



    <RelativeLayout
        android:id="@+id/relative_view_visits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_visit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"

            android:padding="5dp"
            android:textSize="25sp"
            android:layout_marginStart="5dp"
            android:background="#184967"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_visit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/text_visit_number"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/text_amount"
            android:textColor="#000"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/text_visit_date"
            />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/text_view_amount"
        android:layout_marginStart="5dp"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/text_operation"
            android:textColor="#000"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/text_visit_date"
            android:layout_toEndOf="@id/text_visit_number"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_below="@id/text_visit_date"
            android:layout_toEndOf="@id/text_view_operation"
            android:layout_marginStart="5dp"
            />

    </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>